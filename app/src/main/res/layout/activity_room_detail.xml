<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomDetailActivity">


    <TextView
        android:id="@+id/tvRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text"
        android:text="ROOM"
        android:textAlignment="center"
        android:textSize="24sp"
        android:longClickable="true"/>

    <Switch
        android:id="@+id/bState"
        android:layout_width="321dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="37dp"
        android:text="Włącz/Wyłącz"
        android:textSize="18sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/intensityBar"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="125dp"
        android:max="100" />

    <TextView
        android:id="@+id/intensityTv"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="273dp"
        android:layout_marginTop="193dp"
        android:inputType="text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/intensityTittle"
        android:layout_width="142dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="325dp"
        android:text="Natężenie:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/bAutoOn"
        android:layout_width="333dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="205dp"
        android:text="Automatyczne włączanie światła"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/blackoutBar"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="105dp" />

    <TextView
        android:id="@+id/blackoutTittle"
        android:layout_width="136dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="322dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="156dp"
        android:text="Czułość:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/blackoutTv"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/intensityTv"
        android:layout_alignTop="@+id/blackoutBar"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:inputType="text"
        android:textSize="18sp" />

</RelativeLayout>